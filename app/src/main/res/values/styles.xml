<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="BaseTheme">
        <!--这是文本的主要颜色，用于工具栏标题-->
        <!--<item name="android:textColorPrimary">@color/toolbar_text</item>-->
        <!--这是次文本的主要颜色，用于工具栏次标题-->
        <!--<item name="android:textColorSecondary">@color/toolbar_text</item>-->
        <!--分割线颜色-->
        <!--<item name="android:divider">@color/divider_line</item>-->
        <!--<item name="android:windowBackground">@color/window_background</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowAnimationStyle">@style/slide_right_entry</item>-->
    </style>

    <style name="AppBaseTheme.BigPhotoTheme">
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 用这张图这样会变形，不知是分辨率问题还是怎么着 -->
        <!--<item name="android:windowBackground">@drawable/ic_github</item>-->
    </style>

    <style name="VideoPlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 右滑动进入/退出动画 -->
    <style name="slide_in_right" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/slide_right_entry</item>
        <item name="android:windowExitAnimation">@anim/slide_right_exit</item>
    </style>

    <style name="news_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="news_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="topic_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="photo_main">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="photo_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="manage_title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="manage_sub_title">
        <item name="android:textSize">12sp</item>
    </style>

    <!--***********************   购物车******************************-->

    <!--购物车item1字体样式-->
    <style name="shopping_textView_item1">
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/shopping_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">26px</item>
        <item name="android:layout_marginBottom">26px</item>
    </style>
    <!--购物车item2字体样式-->
    <style name="shopping_textView_item2">
        <item name="android:textSize">22px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_toEndOf">@id/iv_item2</item>
        <item name="android:layout_marginRight">20px</item>
    </style>

    <!--购物车选择框-->
    <style name="shopping_change_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/ic_uncheck</item>

    </style>
</resources>
