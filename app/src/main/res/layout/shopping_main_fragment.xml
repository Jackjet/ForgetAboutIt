<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_shopping_title"
        android:layout_width="match_parent"
        android:layout_height="63px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="@string/shopping_title"
        android:textColor="@color/shopping_text_color"
        android:textSize="32px"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shopping_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_title"
        ></android.support.v7.widget.RecyclerView>

    <include
        layout="@layout/shopping_main_include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </include>
</RelativeLayout>