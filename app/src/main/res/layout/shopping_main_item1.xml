<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72px">

    <ImageView
        android:id="@+id/iv_shopping_item1_xuan"
        style="@style/shopping_change_imageview"/>


    <TextView
        android:id="@+id/tv_shopping_shop"
        style="@style/shopping_textView_item1"
        android:layout_marginLeft="20px"
        android:layout_toEndOf="@id/iv_shopping_item1_xuan"
        android:text="@string/shop_shop_name"
        />

    <TextView
        android:id="@+id/tv_bianji"
        style="@style/shopping_textView_item1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:text="@string/shop_bianji"/>

</RelativeLayout>