<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_header_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="430px"
    android:background="#000">

    <TextView
        android:id="@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_margin_top"
        android:background="#00000000" />

    <FrameLayout
        android:id="@id/btn_msg_center"
        android:layout_width="@dimen/btn_msg_width"
        android:layout_height="@dimen/btn_msg_width"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_view"
        android:layout_marginRight="@dimen/btn_msg_margin_r"
        android:layout_marginTop="@dimen/btn_msg_margin_t">

        <ImageView
            android:id="@+id/iv_tell_message"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:background="@drawable/tell_xiaoxi" />

    </FrameLayout>
<LinearLayout
    android:id="@+id/layout_user_header"
    android:layout_width="@dimen/layout_user_header_width"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/user_header_marginBottom"
    android:gravity="center"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/iv_avatar"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="1dp"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_width"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/tv_avatar"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/avatar_tv_marginTop"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textSize="@dimen/avatar_tv_size"
        android:textColor="#ffffff"
        android:text="hello"
        />
</LinearLayout>
    <Button
        android:id="@+id/btn_login_register"
        android:layout_width="@dimen/btn_lr_width"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/btn_login_marginBottom"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_lr_tsize"
        android:text="@string/login_or_register"
        android:visibility="gone"
        />

</com.zhy.autolayout.AutoRelativeLayout>